{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./dist"
  ],
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "module": "ES2020",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "~*": ["./*"]
    },
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "removeComments": true
  }
}